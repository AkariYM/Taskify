<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Contenedor de información del evento (título y descripción) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="8dp">

        <!-- Fecha, hora y título -->
        <TextView
            android:id="@+id/tvEventoInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="05/11 10:00 - Comprar despensa"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#212121"/>

        <!-- Descripción del evento -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leche, pan, huevos"
            android:textSize="13sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>
        <!-- visibility="gone" hace que se oculte si no hay descripción -->

    </LinearLayout>

    <!-- Botón Editar (ícono de lápiz) -->
    <ImageButton
        android:id="@+id/btnEditar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Editar evento"
        android:tint="#1976D2"
        android:layout_marginEnd="4dp"/>

    <!-- Botón Eliminar (ícono de basura) -->
    <ImageButton
        android:id="@+id/btnEliminar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Eliminar evento"
        android:tint="#D32F2F"
        android:layout_marginStart="4dp"/>

</LinearLayout>