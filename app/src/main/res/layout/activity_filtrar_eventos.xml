<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:text="Eventos" android:textSize="20sp" android:textStyle="bold" />

    <LinearLayout android:layout_marginTop="8dp" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="Personal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <Switch android:id="@+id/switchPersonal" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="AcadÃ©mico" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <Switch android:id="@+id/switchAcademico" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="Trabajo" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <Switch android:id="@+id/switchTrabajo" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button android:id="@+id/btnAplicar" android:text="Aplicar filtros" android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <ListView android:id="@+id/listFiltrada" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_marginTop="8dp"/>

</LinearLayout>
